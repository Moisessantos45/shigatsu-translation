{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@/Components/*": [
        "Components/*"
      ],
      "@/Container/*": [
        "Container/*"
      ],
      "@/Css/*": [
        "Css/*"
      ],
      "@/Headers/*": [
        "Headers/*"
      ],
      "@/Config/*": [
        "Config/*"
      ],
      "@/Pages/*": [
        "Pages/*"
      ],
      "@/Types/*": [
        "Types/*"
      ],
      "@/Services/*": [
        "Services/*"
      ],
      "@/Store/*": [
        "Store/*"
      ],
      "@/Utils/*": [
        "Utils/*"
      ],
      "@/lib/*": [
        "lib/*"
      ],
    },
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}